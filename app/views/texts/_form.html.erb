<%= form_for @text do |f| %>
    <div class="form-group">
      <label>Text name</label>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%= f.text_area :description%>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>

<%end%>
